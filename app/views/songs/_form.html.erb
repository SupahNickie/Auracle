<%= form_for [@user, @album, @song], :html => { :multipart => true } do |f| %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@song.errors.count, "error") %> prohibited this song from being saved:</h2>

      <ul>
      <% @song.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :mp3, "Mp3 To Upload" %><br>
    <%= f.file_field :mp3 %>
  </div>
  <div class="field">
    <%= f.label :link_to_purchase %><br>
    <%= f.text_field :link_to_purchase %>
  </div>
  <div class="field">
    <%= f.label :link_to_download %><br>
    <%= f.text_field :link_to_download %>
  </div>
  <div class="field">
    <%= f.label :mood, "The track's mood" %><br>
    <%= f.number_field :mood %>
  </div>
  <div class="field">
    <%= f.label :timbre, "The track's timbre" %><br>
    <%= f.number_field :timbre %>
  </div>
  <div class="field">
    <%= f.label :intensity, "The track's intensity" %><br>
    <%= f.number_field :intensity %>
  </div>
  <div class="field">
    <%= f.label :tone, "The track's tone" %><br>
    <%= f.number_field :tone %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
